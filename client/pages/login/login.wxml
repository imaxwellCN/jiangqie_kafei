<!--pages/login/login.wxml-->
<view style="background: url({{background}}) no-repeat; background-size: 750rpx 520rpx;background-position: 0 -120rpx;">
	<view class="jiangqie-login">
		<view class="jiangqie-app-info">
			<!--替换为小程序logo-->
			<image src="https://imaxwell.cn/avatar" mode="aspectFill"></image>
			<view class="jiangqie-app-name">{{title}}</view>
			<view class="jiangqie-app-slogan">授权登录可查看更多内容</view>
		</view>
		<view class="jiangqie-login-btn">
			<button catchtap="handlerLoginClick" class="jiangqie-login-btnr">确定</button>
			<button catchtap="handlerCancelClick" class="jiangqie-login-btnl">取消</button>
		</view>

		<view class="adContainer">
  	<ad unit-id="adunit-ce695860e015dabd" ad-intervals="30"></ad>
	</view>
	</view>
</view>
<!--加载框 start-->
<tui-loading visible="{{loading}}"></tui-loading>
<!--加载框 end-->